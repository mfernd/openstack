#cloud-config

package_reboot_if_required: true
package_update: true
package_upgrade: true
packages:
  - git
  - ca-certificates

write_files:
  - content: "cloud init executed"
    owner: root:root
    path: /provided.txt
    permissions: "0644"

ansible:
  package_name: ansible-core
  install_method: distro
  pull:
    url: https://github.com/mfernd/openstack.git
    playbook_name: ${playbook_name}
